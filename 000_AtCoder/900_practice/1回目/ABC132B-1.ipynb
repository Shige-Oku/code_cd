   "metadata": {},
   "outputs": [],
   "source": [
    "ans = 0\n",
    "for i in range(1, N-1):\n",
    "    a, b, c = Pn[i-1:i+2]\n",
    "    if a > c:\n",
    "        a, c = c, a\n",
    "    if a < b < c:\n",
    "        ans += 1"
   ]
